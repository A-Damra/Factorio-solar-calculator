<!DOCTYPE html>
<html lang="en">
<head>
    <title>Solar panels / Accumulators</title>
</head>
<body>
    <label>
        Power Consumption in MW
        <input type="text" id="powerCons">
    </label>
    <br/>
    <br/>
    <label>
        Solar Panels needed
        <input type="text"  id="solarPanels" readonly>
    </label>

    <br/>
    <br/>
    <label>
        Accumulators needed
        <input type="text"  id="accumulators" readonly>
    </label>



<script lang="javascript">
    const eachSolar = 0.06; // MW per solar panel
    const accumulatorsPerSolar = 0.84; // Accumulators needed per solar panel

    const inputField = document.getElementById('powerCons'); // Input event
    const solarOut = document.getElementById('solarPanels'); // Output for solar panels
    const accumulatorsOut = document.getElementById('accumulators'); // Output for accumulators

    inputField.addEventListener('input', function() {
        let powerConsumption = parseFloat(inputField.value);


            let numberOfSolar = powerConsumption / eachSolar;
            let accumulatorsNeeded = numberOfSolar * accumulatorsPerSolar;

            solarOut.value = numberOfSolar.toFixed(2);
            accumulatorsOut.value = accumulatorsNeeded.toFixed(2);

    });

</script>
</body>
</html>






